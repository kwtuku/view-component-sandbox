<table class="border-collapse w-full border border-slate-400 dark:border-slate-500 bg-white dark:bg-slate-800 text-sm shadow-sm">
  <thead class="bg-slate-50 dark:bg-slate-700">
    <tr>
      <th class="w-min border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left"></th>
      <th class="w-1/4 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">my_string</th>
      <th class="w-1/4 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">my_scope</th>
      <th class="w-1/4 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">position</th>
      <th class="w-1/4 border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">updated_at</th>
    </tr>
  </thead>
  <tbody data-controller="sortable-list" id="my_list_items">
    <%= render partial: "my_list_items/my_list_item", collection: @my_list_items %>
  </tbody>
</table>
